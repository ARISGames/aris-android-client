<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_profile_list_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@drawable/bottom_border">

    <!-- Left side Profile Type Icon -->
    <LinearLayout
        android:id="@+id/ll_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:padding="3dp" >
        <ImageView
            android:id="@+id/iv_profile_item_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_icon"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <!-- Item name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Profile Item"
        android:id="@+id/tv_item_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ll_profile_icon"
        android:layout_toEndOf="@+id/ll_profile_icon"
        android:layout_marginLeft="24dp"/>

</RelativeLayout>